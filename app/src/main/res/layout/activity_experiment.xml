<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".experiment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_page4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alwaysDrawnWithCache="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-200dp"
            android:layout_marginRight="250dp"
            android:background="@drawable/mailicon" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="-200dp"
            android:background="@drawable/close" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="350dp"
            android:alpha="0.7"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#414028">

            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Player 1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/btnexp1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:alpha="0.7"
                android:background="@color/themeColor"
                android:elevation="5dp"
                android:text="Experiment 1"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:alpha="0.7"
                />

            <Button
                android:id="@+id/btnexp2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:alpha="0.7"
                android:background="@color/themeColor"
                android:elevation="5dp"
                android:text="Experiment 2"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:alpha="0.7"
                />

            <Button
                android:id="@+id/btnexp3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:alpha="0.7"
                android:background="@color/themeColor"
                android:elevation="5dp"
                android:text="Experiment 3"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:alpha="0.7"
                />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
