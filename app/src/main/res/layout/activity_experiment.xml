<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExperimentActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_page4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="A"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:elevation="2dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp"
            android:background="#fff"
            android:padding="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@id/player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:text="Player name"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@id/player_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Player id"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.7"
                android:background="#969595" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Age"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Weight"
                    android:textAlignment="center"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Height"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Gender"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.7"
                android:background="#969595"/>

            <TextView
                android:id="@+id/btnexp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                android:alpha="0.7"
                android:background="@drawable/button_back"
                android:elevation="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Experiment 1"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.7"
                android:background="#969595" />

            <TextView
                android:id="@+id/btnexp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                android:alpha="0.7"
                android:background="@drawable/button_back"
                android:elevation="0dp"
                android:text="Experiment 2"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.7"
                android:background="#969595" />

            <TextView
                android:id="@+id/btnexp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                android:alpha="0.7"
                android:background="@drawable/button_back"
                android:elevation="0dp"
                android:text="Experiment 3"
                android:textColor="#000"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="30dp"
                android:alpha="0.7"
                android:background="#969595" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
